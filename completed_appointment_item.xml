<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="6dp"
    app:strokeColor="#C9D7EA"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="#EAF2FB">

        <!-- Calendar icon -->
        <ImageView
            android:id="@+id/icon_calendar_completed"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Patient name -->
        <TextView
            android:id="@+id/text_view_item_completed_appointment_patient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="John"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/icon_calendar_completed"
            app:layout_constraintEnd_toStartOf="@id/image_view_completed_appointment_completed"
            app:layout_constraintTop_toTopOf="@id/icon_calendar_completed"
            tools:text="Patient Name" />

        <!-- COMPLETED stamp -->
        <ImageView
            android:id="@+id/image_view_completed_appointment_completed"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/completed_stamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Inner white info card -->
        <LinearLayout
            android:id="@+id/info_container_completed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/bg_inner_card"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/icon_calendar_completed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Contact -->
            <TextView
                android:id="@+id/text_view_item_completed_patient_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2B2B2B" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#DADADA" />

            <!-- Date -->
            <TextView
                android:id="@+id/text_view_item_completed_appointment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05/03/2026"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2B2B2B" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#DADADA" />

            <!-- Time -->
            <TextView
                android:id="@+id/text_view_item_completed_appointment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:00 AM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2B2B2B" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
