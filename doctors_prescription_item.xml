<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DCE3ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- TOP COLORED HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2563EB"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient"
                android:textSize="12sp"
                android:textColor="#C7D2FE"/>

            <TextView
                android:id="@+id/text_view_doctor_prescription_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saurav Kalsoor"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </LinearLayout>


        <!-- BODY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- MEDICINE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine"
                android:textColor="#64748B"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_doctor_prescription_medicine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crocin 500mg"
                android:textColor="#0F172A"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>


            <!-- SCHEDULE CHIPS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_breakfast_doctor_prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Breakfast"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3B82F6"
                    app:cornerRadius="50dp"
                    android:minWidth="0dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_lunch_doctor_prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="Lunch"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#10B981"
                    app:cornerRadius="50dp"
                    android:minWidth="0dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dinner_doctor_prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="Dinner"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#F59E0B"
                    app:cornerRadius="50dp"
                    android:minWidth="0dp"
                    android:visibility="gone"/>

            </LinearLayout>



            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E8F0"
                android:layout_marginVertical="16dp"/>



            <!-- DATE + DURATION ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <!-- START -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="#64748B"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_view_date_start_doctor_prescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 May 2026"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </LinearLayout>


                <!-- END -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="#64748B"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_view_date_end_doctor_prescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 May 2026"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </LinearLayout>


                <!-- DURATION -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="#64748B"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_view_item_medicine_duration_doctor_prescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Days"
                        android:textColor="#2563EB"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>