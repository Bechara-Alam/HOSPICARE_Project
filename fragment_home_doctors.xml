<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= HEADER IMAGE ================= -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/image_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/hospital_background" />

            <!-- Soft dark overlay for readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <!-- Greeting text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="20dp">

                <TextView
                    android:id="@+id/homet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello Doctor!"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:alpha="0.9" />

            </LinearLayout>
        </FrameLayout>

        <!-- ================= CONTENT CARD ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">



            <!-- ===== Buttons ===== -->

            <Button
                android:id="@+id/button_approve_appointments"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="Approve Appointments"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_pending_appointments"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="Pending Appointments"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_completed_appointments"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="Completed Appointments"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_your_patients"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="Patients Prescriptions"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!-- ================= LABORATORY SECTION ================= -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laboratory"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="14dp"/>

            <Button
                android:id="@+id/button_view_lab_results"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="View Patient Lab Results"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_request_lab_test"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/button_blue_rounded"
                android:elevation="4dp"
                android:text="Request Lab Test"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
